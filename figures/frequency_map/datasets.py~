### Functions to get the file name for each year of the datasets.
def get_fn_gAR(year):
    data_dir = (
        '/home/orca/bkerns/projects/mjo_lpt_and_ar/tracking'
        + '/lpt-python-public/ar.testing/data/ar/g0_0h/thresh1/systems'
        )

    year2 = year + 1
    # if year == 2023:
    #     fn = (data_dir + f'/lpt_composite_mask_{year}060100_{year2}053123.nc')
    # else:
    fn = (data_dir + f'/lpt_composite_mask_{year}060100_{year2}063023.nc')

    return fn

def get_fn_gAR12(year):
    data_dir = (
        '/home/orca/bkerns/projects/mjo_lpt_and_ar/tracking'
        + '/lpt-python-public/ar.testing.12h_cutoff/data/ar/g0_0h/thresh1/systems'
        )

    year2 = year + 1
    fn = (data_dir + f'/lpt_composite_mask_{year}060100_{year2}063023.nc')

    return fn



